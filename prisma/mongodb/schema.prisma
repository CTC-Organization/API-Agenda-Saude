// prisma/schema.prisma

datasource db {
  provider = "mongodb"
  url      = env("MONGODB_URI")
}

generator client {
  provider = "prisma-client-js"
  output   = "../../node_modules/@prisma/mongodb-client"
}

model Usf {
  id                 Int            @id() @map("_id")
  nome_oficial       String
  rpa                Int
  microregiao        Float
  cnes               Int
  cod_nat            String
  tipo_servico       String
  endereco           String
  bairro             String
  fone               String
  servico            String
  especialidade      String
  como_usar          String
  horario            String
  ordem              String
  latitude           String
  longitude          Float
  healthDistrict     HealthDistrict @relation(fields: [distrito_sanitario], references: [id])
  distrito_sanitario Int            @map("distrito_sanitario")

  @@map("usfs")
}

model HealthDistrict {
  id                 Int    @id() @map("_id")
  bairro             String
  distrito_sanitario Int
  descricao_distrito String
  usfs               Usf[]

  @@map("health_districts")
}

